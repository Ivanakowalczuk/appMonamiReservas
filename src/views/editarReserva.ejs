                    <option <%= reserva.id_cancha == "s2" ? "selected" : '' %> value="s2"   > Squash - Cancha 2</option>
                    <option <%= reserva.id_cancha == "s3" ? "selected" : '' %> value="s3"  > Squash - Cancha 3</option>
                  </select>
                     
                     
